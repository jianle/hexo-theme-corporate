<% if (page.layout == "contact"){ %>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?key=<%= config.google_api  %>"></script>
  <%- js('metronic/assets/plugins/gmaps/gmaps.js') %>
  <script>
    var map;
    $(document).ready(function(){
      map = new GMaps({
	    div: '#map',
	    lat: <%= theme.lat %>,
	    lng: <%= theme.long %>,
      });
       var marker = map.addMarker({
	lat: <%= theme.lat %>,
	lng: <%= theme.long %>,
	title: "<%= config.author %>",
	infoWindow: {
	    content: "<%- '<b>' + config.author + '</b><br>' + theme.address_1 +
	    "<br>" + theme.address_2 + "<br>" + theme.address_3 %>"
	}
    });

       marker.infoWindow.open(map, marker);
    });
  </script>
<% } %>


